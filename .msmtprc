defaults
auth on
tls on
port 465
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile ~/.msmtp.log

# Gmail
account gmail
host smtp.gmail.com
tls_starttls off
from elio.oued@gmail.com
user elio.oued@gmail.com
passwordeval `gpg -d ~/.mutt/pwd.gpg | grep "set my_perso_password" | awk -F "= " '{print $2}'`

account work
