function stopwatch() {
    start=$(date +%s)
    while true; do
        time="$(( $(date +%s) - $start))"
        printf '%s\r' "$(date -u -d "@$time" +%H:%M:%S)"
        sleep 0.1
    done
}

function off(){
  FILE=/var/lib/pacman/db.lck
  if [ -f "$FILE" ]; then
    echo "File /var/lib/pacman/db.lck exists."
    echo "You might want to wait until pacman have finished what it is doing"
  else
    poweroff
  fi
}

